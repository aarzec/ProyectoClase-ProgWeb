@model List<capaEntidad.SucursalCLS>

<h2>Guardar Sucursal</h2>
<form class="row g-3" id="formGuardarSucursal">
    <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" name="Nombre" class="form-control" id="nombre" value="">
    </div>
    <div class="col-md-6">
        <label for="direccion" class="form-label">Dirección</label>
        <input type="text" name="Direccion" class="form-control" id="direccion" value="">
    </div>
    <div class="col-md-3">
        <button class="btn btn-outline-secondary" type="button" onclick="guardarSucursal()" id="buttonGuardar">Guardar</button>
        <button class="btn btn-outline-info" type="button" onclick="limpiarSucursal()">Limpiar</button>
    </div>
</form>
